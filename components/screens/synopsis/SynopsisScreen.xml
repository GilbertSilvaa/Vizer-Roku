<component name="SynopsisScreen" extends="Group">
  <script type="text/brightscript" uri="SynopsisScreen.brs" />

  <interface>
    <field id="content" type="node" />
    <field id="isBack" type="bool" />
  </interface>
  
  <children>
    <Group>
      <Poster
        id="poster"
        translation="[0,0]" 
      />
      <Rectangle 
        id="opacity"
        color="0x000000cf" 
        translation="[0,0]" 
      />

      <LayoutGroup 
        layoutDirection="vert"
        itemSpacings="[25]"
        translation="[50,50]" 
      >
        <Label 
          id="title"
          font="font:LargeBoldSystemFont"       
        />

        <LayoutGroup 
          layoutDirection="horiz" 
          vertAlignment="center" 
          itemSpacings="[12]"
        >
          <Label id="category" font="font:SmallSystemFont" />

          <Label text="•" font="font:SmallSystemFont" />

          <Label id="releaseYear" font="font:SmallSystemFont" />

          <Label text="•" font="font:SmallSystemFont" />

          <ParentalRatingWidget id="parentalRating"/>
        </LayoutGroup>

        <Label 
          id="synopsis"
          font="font:MediumSystemFont"
          wrap="true"
        />

        <Button
          id="play"
          text="Assistir"
          showFocusFootprint="true"
          iconUri="pkg:/images/icons/play-icon.png" 
          focusedIconUri="pkg:/images/icons/play-icon.png" 
          focusBitmapUri="pkg:/images/colors/primary-color.png"
          minWidth="170"
          height="50"
        />
      </LayoutGroup>
    </Group>

    <VideoWidget 
      id="video" 
      visible="false"
    />
  </children>
</component>